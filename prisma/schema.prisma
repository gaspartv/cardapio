datasource db {
    provider = "sqlite"
    url      = "file:./db.sqlite"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            Int      @id @default(autoincrement())
    name          String
    email         String   @unique
    password      String
    registered_at DateTime @default(now())

    store_  Store? @relation(fields: [storeId], references: [id])
    storeId Int?   @unique

    @@map("user")
}

model Store {
    id           Int      @id @default(autoincrement())
    name         String
    desc         String
    cnpj         String
    pix          String
    phone        String
    minimumOrder String
    image        String
    created_at   DateTime @default(now())

    address_  Address @relation(fields: [addressId], references: [id])
    addressId Int     @unique

    deliveryOrWhithdraw_  DeliveryOrWhithdraw @relation(fields: [deliveryOrWhithdrawId], references: [id])
    deliveryOrWhithdrawId Int                 @unique

    opening   Opening @relation(fields: [openingId], references: [id])
    openingId Int     @unique

    stars_    Stars[]
    products_ Products[]

    userId User?

    @@map("store")
}

model Stars {
    id         Int      @id @default(autoincrement())
    storeName  String
    clientName String
    note       Decimal
    created_at DateTime @default(now())
    comment    String
    Store      Store?   @relation(fields: [storeId], references: [id])
    storeId    Int?

    @@map("star")
}

model Products {
    id      Int    @id @default(autoincrement())
    name    String
    Store   Store? @relation(fields: [storeId], references: [id])
    storeId Int?

    categories Category[]

    @@map("product")
}

model Opening {
    id        Int    @id @default(autoincrement())
    storeName String
    monday    String
    tuesday   String
    wednesday String
    thursday  String
    friday    String
    saturday  String
    sunday    String
    Store     Store?

    @@map("opening")
}

model DeliveryOrWhithdraw {
    id        Int     @id @default(autoincrement())
    delivery  Boolean
    whithdraw Boolean
    Store     Store?

    @@map("deliveryOrWhithdraw")
}

model Category {
    id    Int    @id @default(autoincrement())
    name  String
    desc  String
    image String

    Products   Products? @relation(fields: [productsId], references: [id])
    productsId Int?

    @@map("category")
}

model Address {
    id           Int    @id @default(autoincrement())
    name         String
    zipcode      String
    street       String
    streetNumber String
    borough      String
    city         String
    state        String
    Store        Store?

    @@map("address")
}
